# Routes

# Property API endpoints
POST    /api/properties             controllers.PropertyController.createProperty()
GET     /api/properties             controllers.PropertyController.listProperties()
GET     /api/properties/:id         controllers.PropertyController.getProperty(id: String)
PUT     /api/properties/:id         controllers.PropertyController.updateProperty(id: String)
DELETE  /api/properties/:id         controllers.PropertyController.deleteProperty(id: String)

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
